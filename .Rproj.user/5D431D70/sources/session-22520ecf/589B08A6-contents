 #!/bin/bash
 # 设置错误处理和调试选项
set -e  # 遇到错误时退出脚本
set -x  # 打印每个脚本命令（用于调试）

# 获取当前脚本所在目录的绝对路径
CFG_DIR="$(cd "$(dirname "${BASH_SOURCE[C_0]()}")" && pwd)"

source "${CFG_DIR}/config.sh"

cd $PROJECT_DIR
tar -czvf ${DEPLOY_TAR} ${SITES}

echo -e "\n 本地项目部署完毕"

# docker-compose down;quarto render;chmod -R 755 /Users/zhuquanming/Projects/adopapablog/_site;docker-compose up -d; open http://localhost:8080



